<h1>Users#edit</h1>
<div class="container">
  <div class="row">
    <h2>User info</h2>
    <%= form_with model: @user, url: user_path, method: :patch do |f|%>
      <label>name</label>
      <%= f.text_field :name %>
      <label>image</label>
      <%= f.file_field :profile_image, accept: "image/*" %>
      <label>introduction</label>
      <%= f.text_area :introduction %>
      <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>