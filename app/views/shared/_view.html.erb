<!--"user","page"に値を渡す-->

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) %>
      <p>name:<%= user.name %></p>
      <p>introduction:<%= user.introduction %></p>

      <div><%= link_to "edit", edit_user_path(current_user.id) %></div>

      <h2>New book</h2>
      <%= form_with model: book_new, url: books_path do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create book" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table>
      <% case page %>
        <% when 'books/index' %>
        <!--["books","users"]に値を渡す-->
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>title</th>
              <th>opinion</th>
            </tr>
          </thead>
          <tbody>
            <% books.each do |booklist| %>
              <tr>
                <td><%= image_tag users.find(booklist.user_id).get_profile_image(100, 100) %></td>
                <td><%= link_to booklist.title, book_path(booklist.id) %></td>
                <td><%= booklist.body %></td>
              </tr>
            <% end %>
          </tbody>

        <% when 'books/show' %>
        <!--["user","book"]に値を渡す-->
          <h2>Book detail</h2>
          <tbody>
            <tr>
              <td><%= link_to image_tag(user.get_profile_image(100, 100)), user_path(book.user_id) %>
              </br><%= link_to user.name, user_path(book.user_id) %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <% if book.user_id == current_user.id %>
                <td><%= link_to 'edit', edit_book_path(book.id) %></td>
                <td><%= link_to 'delete', book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          </tbody>

        <% when 'users/index' %>
        <!--["users"]に値を渡す-->
          <h2>Users</h2>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% users.each do |userlist| %>
              <tr>
                <td><%= image_tag userlist.get_profile_image(100, 100) %></td>
                <td><%= userlist.name %></td>
                <td><%= link_to 'show', user_path(userlist.id) %></td>
              </tr>
            <% end %>
          </tbody>

        <% when 'users/show' %>
        <!--["books","user"]に値を渡す-->
          <h2>Books</h2>
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>title</th>
              <th>opinion</th>
            </tr>
          </thead>
          <tbody>
            <% books.each do |booklist| %>
              <tr>
                <td><%= link_to image_tag(user.get_profile_image(100, 100)), user_path(booklist.user_id) %></td>
                <td><%= link_to booklist.title, book_path(booklist.id) %></td>
                <td><%= booklist.body %></td>
              </tr>
            <% end %>
          </tbody>

      <% end %>
      </table>

    </div>
  </div>
</div>