<h2>User info</h2>
 <%= image_tag user.get_profile_image(100, 100) %>
<p>name:<%= user.name %></p>
<p>introduction:<%= user.introduction %></p>

<div><%= link_to "edit", edit_user_path(current_user.id) %></div>

<h2>New book</h2>
<%= form_with model: book_new, url: books_path do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create book" %>
<% end %>



