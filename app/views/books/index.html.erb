<h1>books index</h1>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.present? %>
        <%= image_tag @user.profile_image(100, 100) %>
      <% else %>
        <%= image_tag 'no_image.jpg' %>
      <% end %>
      <p>name:<%= @user.name %></p>
      <p>introduction:<%= @user.introduction %></p>

      <div><%= link_to "edit", edit_user_path(current_user.id) %></div>

      <h2>New book</h2>
      <%= form_with model: @book, url: books_path do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create book" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">

    </div>
  </div>
</div>