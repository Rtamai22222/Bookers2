<!--books/index-->
<div class="container px-5 px-sm-0">

  <% if @book_new.errors.any? %>
  <div>
    <h3><%= @book_new.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
       <% @book_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/sidebar', user: @user, book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |booklist| %>
            <tr>
              <td><%= link_to image_tag(@users.find(booklist.user_id).get_profile_image(80, 80)), user_path(booklist.user_id) %></td>
              <td><%= link_to booklist.title, book_path(booklist.id) %></td>
              <td><%= booklist.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>