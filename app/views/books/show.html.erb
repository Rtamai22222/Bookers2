<!--books/show-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/sidebar', user: @user, book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <h2>Book detail</h2>
        <tbody>
          <tr>
            <td><%= link_to image_tag(@user.get_profile_image(100, 100)), user_path(@book.user_id) %>
            </br><%= link_to @user.name, user_path(@book.user_id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>